<?xml version="1.0" encoding="UTF-8"?>
<phpunit colors="true" bootstrap="deployment/vendor/autoload.php">
  <filter>
    <whitelist>
      <directory suffix=".php">./deployment/application</directory>
    </whitelist>
  </filter>
  <logging>
    <log type="coverage-html" target="build/phpunit" title="patrikx3/resume-web" charset="UTF-8" />
    <log type="coverage-text" target="php://stdout" />
    <log type="coverage-clover" target="build/coverage.xml" />
  </logging>
  <testsuites>
    <testsuite name="patrikx3/resume-web">
      <directory>./test/phpunit</directory>
    </testsuite>
  </testsuites>
</phpunit>