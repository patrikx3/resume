{
    "config": {
        "vendor-dir": "deployment/vendor",
        "discard-changes": true
    },
    "require": {
        "php": ">=7.4.0",
        "ext-gd": "*",
        "swiftmailer/swiftmailer": ">=6",
        "mpdf/mpdf": ">=8",
        "p3x/resume-common": "*"
    },
    "require-dev": {
        "phpunit/phpunit": ">=7"
    },
    "repositories": [
        {
            "type": "path",
            "url": "./deployment/composer-custom/resume-php-common"
        }
    ],

    "scripts": {
        "compile": [
            "bower install",
            "php cli.php mpdf"
        ]
    }
}
